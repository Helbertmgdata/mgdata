[Unit]
Description=InteliMon Dashboard - Advanced Monitoring System
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/intelimon-flask
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/gunicorn -w 4 -b 0.0.0.0:5000 app.app:app --timeout 120
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
